<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.Grid"
             Title="Grid">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            
            <BoxView Grid.Row="0" Grid.Column="0" Color="Red"/>
            <BoxView Grid.Row="0" Grid.Column="1" Color="Green"/>
            <BoxView Grid.Row="1" Grid.Column="0" Color="Blue"/>
            <BoxView Grid.Row="1" Grid.Column="1" Color="Yellow"/>
        </Grid>
        
        <Grid Grid.Row="1">
            <Button BackgroundColor="Purple"
             x:Name="BaStack"
             Text="Ir a StackLayout" 
             Clicked="BaStackClicked"/>
        </Grid>
        
    </Grid>
    
</ContentPage>