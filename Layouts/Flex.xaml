<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.Flex"
             Title="Flex">
    
    <FlexLayout Direction="Column"
            AlignItems="Center"
            JustifyContent="SpaceEvenly">

        <HorizontalStackLayout Margin="30">
            <Button  BackgroundColor="Transparent" WidthRequest="90" HeightRequest="90" Clicked="BaAbsClicked">
                <Button.ImageSource>
                    <FileImageSource File="bailarina.png"/>
                </Button.ImageSource>
            </Button>

            <Label Text="Jessica Olalla"
            FontSize="25" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Margin="30">
            <Button  BackgroundColor="Transparent" WidthRequest="90" HeightRequest="100" Clicked="BaAbsClicked">
                <Button.ImageSource>
                    <FileImageSource File="dance.png"/>
                </Button.ImageSource>
            </Button>

            <Label Text="Jessica Olalla"
            FontSize="25" />
        </HorizontalStackLayout>
    </FlexLayout>

</ContentPage>