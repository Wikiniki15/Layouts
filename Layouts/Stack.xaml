<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.Stack"
             Title="Stack">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <VerticalStackLayout Margin="20,20,20,20">
                <Label Text="Jessica Olalla" FontFamily="Verdana" FontSize="47"/>
                <Label Text="Jessica Olalla" FontFamily="Times New Roman" FontSize="20"/>
                <Label Text="Jessica Olalla" FontFamily="Courier New" FontSize="75"/>
            </VerticalStackLayout>
        </Grid>
        
        <Grid Grid.Row="1">
            <Button
             x:Name="BaFlex"
             Text="Ir a FlexLayout" 
             Clicked="BaFlexClicked"/>
        </Grid>

    </Grid>
    
</ContentPage>